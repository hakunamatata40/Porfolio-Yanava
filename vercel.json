{
  "version": 2,
  "builds": [
    {
      "src": "portfolio_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "buildCommand": "bash build_files.sh"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "portfolio_project/wsgi.py"
    }
  ],
  "outputDirectory": "staticfiles"
}